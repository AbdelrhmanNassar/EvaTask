@model Categories
@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Home" asp-action="Edit" method="post">
    <input type="hidden" asp-for="CategoryId" />
 

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="CategoryName"></label>
        <input class="form-control" asp-for="CategoryName" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="CategoryOrder"></label>
        <input type="number" class="form-control" asp-for="CategoryOrder" />
    </div>

    <div class="form-group mb-3">
        <label class="form-label" asp-for="Description"></label>
        <input class="form-control" asp-for="Description" placeholder="Format: 123-Street-City-Country" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary me-2">Save Changes</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>